		{
			"name": "Auth - Login (save token)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Guardar token en variable de colección/environment",
							"if (pm.response.code === 201 || pm.response.code === 200) {",
							"  var json = pm.response.json();",
							"  var token = json.accessToken || json.token || json?.data?.accessToken;",
							"  if (token) {",
							"    pm.collectionVariables.set('accessToken', token);",
							"    console.log('Saved accessToken');",
							"  } else {",
							"    console.log('No token found in response', json);",
							"  }",
							"} else {",
							"  console.log('Login failed with status', pm.response.code);",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
